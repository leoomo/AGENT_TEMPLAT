{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          "npx prettier --write $FILE_PATH 2>/dev/null || true"
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          "echo 'Session ended. Progress saved to progress.txt'"
        ]
      }
    ]
  }
}
